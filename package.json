{
    "name": "epispot",
    "version": "0.1.0",
    "description": "Compartmental epidemiological models in JavaScript.",
    "keywords": [
        "epidemiology"
    ],
    "homepage": "https://github.com/epispot/epispot",
    "bugs": {
        "url": "https://github.com/epispot/epispot/issues",
        "email": "npm.quantalabs@gmail.com"
    },
    "license": "GPL-3.0-or-later",
    "files": [
        "dist/*"
    ],
    "main": "./dist/index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/epispot/epispot.git"
    },
    "scripts": {
        "lint": "eslint ./src --fix --ext .ts",
        "pretty-quick": "pretty-quick",
        "postpack": "husky install",
        "build": "rimraf dist && tsc",
        "prelint": "tsc --noemit",
        "format": "prettier --write .",
        "prepublish": "tsc"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.7.1",
        "@commitlint/config-conventional": "^17.7.0",
        "@typescript-eslint/eslint-plugin": "^6.7.2",
        "@typescript-eslint/parser": "^6.7.2",
        "eslint": "^8.50.0",
        "eslint-config-prettier": "^9.0.0",
        "husky": "^8.0.3",
        "prettier": "^3.0.3",
        "pretty-quick": "^3.1.3",
        "rimraf": "^5.0.4",
        "typescript": "^5.2.2"
    },
    "type": "module",
    "types": "./dist/index.d.ts",
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "packageManager": "yarn@3.6.3",
    "dependencies": {
        "mathjs": "^11.11.1"
    }
}
